<div class='container'>
    <div class='row'>
      {{#each artists}}
      <div class= 'col-lg-4 artist-container'>

        <img src='{{images.0.url}}' alt='' class='artist-img'>

        <div class='artist-info-container'>
          <p> {{this.name}}</p>
          <a href='artists/{{this.id}}/albums'>View Albums</a>
        </div>
        <br>
      </div>
      {{/each}}
    </div>

  </div>